<?xml version="1.0"  encoding="ISO-8859-1"?><!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://jetty.mortbay.org/configure.dtd"><Configure id="Server" class="org.eclipse.jetty.webapp.WebAppContext">  <New id="Rewrite" class="org.eclipse.jetty.rewrite.handler.RewriteHandler">    <Call name="addRule">      <Arg>        <New class="org.eclipse.jetty.rewrite.handler.HeaderPatternRule">          <Set name="name">Connection</Set>          <Set name="value">keep-alive</Set>        </New>      </Arg>    </Call>	<Set name="handler"><Ref id="Rewrite" /></Set>  </New>    <!-- Set this to the webapp root -->  <Set name="contextPath">/</Set>  <!-- Set this to the path of webapp WAR file -->  <!--<Set name="war"><SystemProperty name="jetty.base" default="."/>/target/OptWebapp.war</Set>-->    <Get name="securityHandler">    <Set name="loginService">      <New class="org.eclipse.jetty.security.HashLoginService">        <Set name="name">BrokerAtCloud Realm</Set>        <!-- Set this to the path to your jetty-users.properties file -->        <Set name="config"><SystemProperty name="jetty.base" default="."/>/jetty-users.properties</Set>		<Set name="refreshInterval">5</Set>		<Call name="start"></Call>      </New>    </Set>  </Get>  </Configure>