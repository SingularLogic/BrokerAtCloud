<?xml version="1.0" encoding="UTF-8"?>
<eventBuilder name="requestsStreamBuilder"
  statistics="enable" trace="enable" xmlns="http://wso2.org/carbon/eventbuilder">
  <from eventAdaptorName="MBJMSInputAdaptor" eventAdaptorType="jms">
    <property name="transport.jms.Destination">RequestsPerSec</property>
  </from>
  <mapping customMapping="enable" type="json">
    <property>
      <from jsonPath="RequestsPerSec"/>
      <to name="requests" type="int"/>
    </property>
    <property>
      <from jsonPath="Offering"/>
      <to name="service" type="string"/>
    </property>
  </mapping>
  <to streamName="requestsStream" version="1.0.0"/>
</eventBuilder>
