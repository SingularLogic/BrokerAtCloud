<?xml version="1.0" encoding="UTF-8"?>
<eventBuilder name="cpuLoadStreamBuilder"
  statistics="enable" trace="enable" xmlns="http://wso2.org/carbon/eventbuilder">
  <from eventAdaptorName="MBJMSInputAdaptor" eventAdaptorType="jms">
    <property name="transport.jms.Destination">CPULoadAvgPerCore</property>
  </from>
  <mapping customMapping="enable" type="json">
    <property>
      <from jsonPath="CPULoadAvgPerCore"/>
      <to name="cpuLoad" type="int"/>
    </property>
    <property>
      <from jsonPath="Offering"/>
      <to name="service" type="string"/>
    </property>
  </mapping>
  <to streamName="cpuLoadStream" version="1.0.0"/>
</eventBuilder>
