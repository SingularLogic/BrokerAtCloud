<?xml version="1.0" encoding="UTF-8"?>
<eventFormatter name="occurredFailureFormatter" statistics="enable"
  trace="disable" xmlns="http://wso2.org/carbon/eventformatter">
  <from streamName="occurredFailureStream" version="1.0.0"/>
  <mapping customMapping="enable" type="json">
    <inline>{"Service": "{{service}}", "Cause": "{{cause}}"}</inline>
  </mapping>
  <to eventAdaptorName="MBJMSOutputAdaptor" eventAdaptorType="jms">
    <property name="transport.jms.Destination">occurredFailure</property>
  </to>
</eventFormatter>
